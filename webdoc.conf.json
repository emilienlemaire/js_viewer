{
    "source": {
        "include": "src/",
        "includePattern": ["\\.ts$", "\\.tsx$", "\\.js$", "\\.jsx$"],
        "excludePattern": "(node_modules|lib|test)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "destination": "docs",
        "template": "@webdoc/default-template",
        "recurse": true,
        "lenient": true
    },
    "template": {
        "repository": "https://github.com/emilienlemaire/js_viewer",
        "outputSourceFiles": true
    },
    "docs": {
        "sort": ["type", "scope", "access", "name"]
    }
}
